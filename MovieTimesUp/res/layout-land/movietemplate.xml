<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:background="@drawable/filmtransition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
	    android:id="@+id/seconds"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="30dp"
	    android:textStyle="bold"
	    android:typeface="serif"
	    android:textColor="@color/greylight"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:textSize="180sp"/>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	    <!-- HEAD (TITLE & RESOLVE BUTTON) -->
        <FrameLayout 
            android:id="@+id/curtain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/curtain1"
            android:layout_gravity="top|center_horizontal">
            <LinearLayout 
                android:orientation="horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:gravity="top"
		        android:layout_gravity="top">

                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"	
            		android:layout_weight="1.8"
                    android:background="@android:color/transparent"/>
                
	    	    <EditText 
	    	        android:id="@+id/title"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="match_parent"
	    	        android:layout_weight="1.4"
	    	        android:paddingBottom="3dp"
	    	        android:paddingLeft="3dp"
	    	        android:paddingRight="3dp"
        			android:ems="30"
					android:gravity="center_horizontal|bottom"
		            android:textColor="@color/black"
		            android:typeface="serif"
		            android:imeOptions="flagNoExtractUi"
		            android:singleLine="true"
		            android:textStyle="bold"
		            android:shadowDx="0.5"
		            android:shadowDy="0.3"
		            android:shadowRadius="120"
					android:layout_gravity="top"
	    	        android:background="@drawable/titlepic"/> 
	    	                   
                <ImageView
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"	
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"                     
            		android:layout_weight="2.1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/resolve"
                    />
                
                <LinearLayout 
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"	                     
            		android:layout_weight="1.8"
            		android:gravity="top|right"
                    android:background="@android:color/transparent">
                    <ImageView 
                        android:id="@+id/life1"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/life"/>
                    
                    <ImageView 
                        android:id="@+id/life2"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/life"/>
                    
                    <ImageView 
                        android:id="@+id/life3"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/life"/>
                </LinearLayout>    
	        </LinearLayout>

    	</FrameLayout>
	    	

		<!-- CLUES DISPLAY && MINUS INFORMATION-->
		<FrameLayout 
    	    android:gravity="center"
    	    android:layout_weight="2"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent">
	    	<LinearLayout 
	        	android:id="@+id/clues"
	    	    android:orientation="vertical"
	    	    android:layout_gravity="center"
	    	    android:gravity="center"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent">
		        <TextView 
		            android:id="@+id/titleclue"
		            android:layout_marginLeft="40dp"
		            android:layout_marginRight="40dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textStyle="bold"
		            android:textColor="@color/greydark"
		            android:typeface="serif"
		            android:gravity="center"
		            android:textSize="38sp"/>
		        <TextView 
		            android:id="@+id/textclue"
		            android:layout_marginLeft="40dp"
		            android:layout_marginRight="40dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textStyle="italic"
		            android:textColor="@color/black"
		            android:typeface="serif"
		            android:gravity="center"
		            android:textSize="40sp"
		            android:singleLine="false"/>
	        </LinearLayout>
	        
	    	
	    	<LinearLayout 
	        	android:id="@+id/points_info"
	    	    android:orientation="horizontal"
	    	    android:layout_gravity="bottom"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content">
		        <TextView 
		            android:id="@+id/genreinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"   
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"
		            android:layout_weight="1"
		            android:text="-15s"/>
		        <TextView 
		            android:id="@+id/dateinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"  
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"   
		            android:layout_weight="1"
		            android:text="-12s"/>
		        <TextView 
		            android:id="@+id/locationinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"   
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"  
		            android:layout_weight="1"
		            android:text="-6s"/>
		        <TextView 
		            android:layout_width="15dp"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/directorinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"  
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"   
		            android:layout_weight="1"
		            android:text="-20s"/>
		        <TextView 
		            android:id="@+id/actorinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"  
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"   
		            android:layout_weight="1"
		            android:text="-15s"/>
		        <TextView 
		            android:id="@+id/characterinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"  
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"   
		            android:layout_weight="1"
		            android:text="-7s"/>
		        <TextView 
		            android:layout_width="15dp"
		            android:layout_height="wrap_content"/>
		        <TextView 
		            android:id="@+id/triviainfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"  
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"   
		            android:layout_weight="1"
		            android:text="-5s"/>
		        <TextView 
		            android:id="@+id/quoteinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"  
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"   
		            android:layout_weight="1"
		            android:text="-7s"/>
		        <TextView 
		            android:id="@+id/synopsisinfo"
		            android:layout_height="wrap_content"
		            android:layout_width="match_parent"  
	    	    	android:gravity="center_horizontal|bottom" 
					android:paddingLeft="12dp"
					android:textStyle="bold"
					android:textColor="@color/reddark"   
		            android:layout_weight="1"
		            android:text="-25s"/>
		    </LinearLayout>
        </FrameLayout>

	    <!-- BUTTONS -->
	    <LinearLayout 
	        android:id="@+id/buttons"
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="4.7"
	        android:gravity="bottom"
	        android:layout_gravity="bottom">
	        
	        <ImageButton
	            android:id="@+id/genre"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"     
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:layout_gravity="bottom"
	            android:scaleType="fitXY"
	            android:src="@drawable/genre1"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/date"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/date2"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/location"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/location2"
	            android:background="@android:color/transparent"/>
	        
	        <ImageButton
	            android:src="@android:color/transparent"
	            android:background="@android:color/transparent"
	            android:layout_width="15dp"
	            android:layout_height="match_parent"/>
	        
	        <ImageButton 
	            android:id="@+id/director"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/director1"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/actor"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/actor3"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/character"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/character3"
	            android:background="@android:color/transparent"/>
	        
	        <ImageButton
	            android:src="@android:color/transparent"
	            android:background="@android:color/transparent"
	            android:layout_width="15dp"
	            android:layout_height="match_parent"/>
	        
	        <ImageButton 
	            android:id="@+id/others"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/others3"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/quotes"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/quotes3"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/synopsis"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/synopsis3"
	            android:background="@android:color/transparent"/>
	    </LinearLayout>
    
	</LinearLayout>
	<ImageView 
	    android:id="@+id/endpicture"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:layout_gravity="center" 
	    android:src="@drawable/coin"/>
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center">
		<ImageView 
		    android:id="@+id/points"
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:layout_weight="1"
		    android:layout_gravity="center" 
		    android:src="@drawable/point1"/>
		<ImageView 
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:layout_weight="5"/>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/previouslinear"
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
		android:background="@color/oldcolor">
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="5"
		    android:gravity="top|left"
		    android:padding="10dp">
			<ImageView 
			    android:id="@+id/camera"
			    android:src="@drawable/camerablink"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="2"
			    android:scaleType="fitCenter"/>	    
			<ImageView 
			    android:src="@android:color/transparent"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_weight="1"/>
		</LinearLayout>
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"></LinearLayout>
	</LinearLayout>
</FrameLayout>
