<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame"
    android:background="@drawable/filmtransition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	    <!-- TEXT -->
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	    	<LinearLayout 
	    	    android:id="@+id/sign"
	    	    android:orientation="horizontal"
	    	    android:background="@drawable/titlegreen"
	    	    android:layout_marginLeft="60dp"
	    	    android:layout_marginRight="60dp"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="top|center_horizontal"
	    	    >
	    	    <EditText 
	    	        android:id="@+id/title"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="match_parent"
	    	        android:layout_weight="1"
	    	        android:layout_marginLeft="25dp"
	    	        android:layout_marginTop="20dp"
	    	        android:layout_marginBottom="20dp"
					android:layout_marginRight="10dp"
					android:gravity="center"
		            android:textColor="@color/black"
		            android:typeface="serif"
		            android:textSize="24sp"
		            android:singleLine="true"
		            android:textStyle="bold"
		            android:shadowDx="0.5"
		            android:shadowDy="0.3"
		            android:shadowRadius="120"
					android:layout_gravity="center"
	    	        android:background="@android:color/transparent"/>
	    	    <ImageButton
	    	        android:id="@+id/answer"
	    	        android:layout_width="match_parent"
	    	        android:layout_height="match_parent"
	    	        android:layout_weight="6.8"
	    	        android:layout_marginLeft="15dp"
	    	        android:layout_marginTop="25dp"
	    	        android:layout_marginBottom="25dp"
	    	        android:layout_marginRight="15dp"
	    	        android:src="@android:color/transparent"
	    	        android:background="@android:color/transparent"/>
	    	</LinearLayout>
	    	<LinearLayout 
	        	android:id="@+id/clues"
	    	    android:orientation="vertical"
	    	    android:layout_gravity="center"
	    	    android:gravity="center"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="match_parent">
		        <com.nappking.movietimesup.widget.AutoResizeTextView 
		            android:id="@+id/titleclue"
		            android:layout_marginLeft="70dp"
		            android:layout_marginRight="70dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textStyle="bold"
		            android:textColor="@color/greydark"
		            android:typeface="serif"
		            android:gravity="center"
		            android:textSize="30sp"/>
		        <com.nappking.movietimesup.widget.AutoResizeTextView 
		            android:id="@+id/textclue"
		            android:layout_marginLeft="40dp"
		            android:layout_marginRight="40dp"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:textStyle="italic"
		            android:textColor="@color/black"
		            android:typeface="serif"
		            android:gravity="center"
		            android:textSize="27sp"
		            android:singleLine="false"/>
	        </LinearLayout>
	    </LinearLayout>
	    
	    
	    <!-- BUTTONS -->
	    <LinearLayout 
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="4.7"
	        android:gravity="bottom"
	        android:layout_gravity="bottom">
	        
	        <ImageButton
	            android:id="@+id/genre"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"     
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:layout_gravity="bottom"
	            android:scaleType="fitXY"
	            android:src="@drawable/genre1"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/date"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/date2"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/location"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/location2"
	            android:background="@android:color/transparent"/>
	        
	        <ImageButton
	            android:src="@android:color/transparent"
	            android:background="@android:color/transparent"
	            android:layout_width="15dp"
	            android:layout_height="match_parent"/>
	        
	        <ImageButton 
	            android:id="@+id/director"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/director1"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/actor"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/actor3"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/character"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/character3"
	            android:background="@android:color/transparent"/>
	        
	        <ImageButton
	            android:src="@android:color/transparent"
	            android:background="@android:color/transparent"
	            android:layout_width="15dp"
	            android:layout_height="match_parent"/>
	        
	        <ImageButton 
	            android:id="@+id/others"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/others3"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/quotes"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/quotes3"
	            android:background="@android:color/transparent"/>
	        <ImageButton 
	            android:id="@+id/synopsis"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"  
	            android:layout_weight="1"
		        android:paddingLeft="4dp"
		        android:paddingRight="4dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/synopsis3"
	            android:background="@android:color/transparent"/>
	    </LinearLayout>
    
	</LinearLayout>
</FrameLayout>
