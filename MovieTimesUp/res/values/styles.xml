<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.nappking.movietimesup"
    >    
    <style name="Theme.filmstrip" parent="@android:style/Theme.Holo.Light">
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:keepScreenOn">true</item>
	    <item name="android:windowBackground">@drawable/texture</item>
	</style>
    <style name="Theme.gradient" parent="@android:style/Theme.Holo.Light">
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:keepScreenOn">true</item>
	    <item name="android:windowBackground">@drawable/gradientbackground</item>
	</style>	
    <style name="Theme.movie" parent="@android:style/Theme.Holo.Light">
    	<item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@drawable/filmtransition</item>
	</style>	
    <style name="Theme.street" parent="@android:style/Theme.Holo.Light">
    	<item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@drawable/street_background</item>
	</style>
	
    <style name="Theme.street_dark" parent="@android:style/Theme.Holo.Light">
    	<item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@drawable/street_dark_background</item>
	</style>
    <style name="AppTheme" parent="android:Theme.Light" >
    </style>
   	<style name="PlayerNameFont" parent="@android:style/TextAppearance.Large">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	<style name="WelcomeFont" parent="@android:style/TextAppearance.Large">
       	<item name="android:textColor">#6B0D0D</item>
   	</style>
   	<style name="YouScoredFont" parent="@android:style/TextAppearance.Small">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	<style name="ScoreFont" parent="@android:style/TextAppearance.Medium">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>   
    <style name="GameOverFont">
        <item name="android:textSize">50sp</item>
       	<item name="android:textColor">#FFFFFF</item>
       	<item name="android:textStyle">bold</item>
   	</style>
   	<style name="ScoreboardPlayerNameFont" parent="@android:style/TextAppearance.Medium">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
   	<style name="ScoreboardPlayerScoreFont" parent="@android:style/TextAppearance.Small">
       	<item name="android:textColor">#FFFFFF</item>
   	</style>
	<style name="fb_button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="login_button" parent="@style/fb_button">
		<item name="android:background">@drawable/login_button</item>
	</style>
	<style name="empty">
		<item name="android:background">@android:color/transparent</item>
	</style>
	<style name="logout_button" parent="@style/fb_button">
		<item name="android:background">@drawable/logout_button</item>
	</style>
	
	<style name="SlideDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/SlideDialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SlideDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

	<style name="FadeDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/FadeDialogAnimation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">true</item>
    </style>

    <style name="FadeDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    
    <style name="infoButton">  
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>     
        <item name="android:scaleType">fitCenter</item>  
    </style>
    
    <style name="infoTextLeftButton">  
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>     
        <item name="android:gravity">center_vertical|right</item>  
        <item name="android:paddingRight">@dimen/grid_text_margin</item>  
        <item name="android:textColor">@color/white</item> 
        <item name="android:textStyle">bold</item> 
    </style>
    
    <style name="infoTextRightButton">  
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>     
        <item name="android:gravity">center_vertical|right</item>  
        <item name="android:layout_marginRight">@dimen/grid_button_margin</item>  
        <item name="android:textStyle">bold</item> 
    </style>
    
    <style name="layoutLeft">  
        <item name="android:layout_width">@dimen/grid_button_size</item>
        <item name="android:layout_height">@dimen/grid_button_size</item>
        <item name="android:layout_weight">1</item>     
        <item name="android:layout_gravity">top|left</item>  
        <item name="android:layout_margin">6dp</item>  
        <item name="android:orientation">vertical</item> 
    </style>
    
    <style name="layoutRight">  
        <item name="android:layout_width">@dimen/grid_button_size</item>
        <item name="android:layout_height">@dimen/grid_button_size2</item>
        <item name="android:layout_weight">1</item>     
        <item name="android:layout_gravity">top|right</item>  
        <item name="android:layout_margin">6dp</item>  
        <item name="android:orientation">vertical</item> 
    </style>
    
</resources>